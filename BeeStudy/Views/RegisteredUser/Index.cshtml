@model IEnumerable<RegisteredUserViewModel>

@{
    ViewData["Title"] = "Registered Users";
}

<div class="container mx-auto">
    <h3 class="headline">Registered Users</h3>
    <div class="row ">
        <div class="col ">
            <table class="table table-hover table-striped table-responsive">
                <thead>
                    <tr class="text-center">
                        <th>User ID</th>
                        <th>UserName</th>
                        <th>Email</th>
                        <th>Learner ID</th>
                        <th>Learner Name</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (RegisteredUserViewModel user in Model)
                    {
                    <tr>
                        <td class="col col-auto">@Html.DisplayFor(u => user.User.Id)</td>
                        <td class="col col-auto">@Html.DisplayFor(u => user.User.UserName)</td>
                        <td class="col col-auto">@Html.DisplayFor(u => user.User.Email)</td>
                        <td class="col col-auto">@Html.DisplayFor(u => user.Learner.Id)</td>
                        @if (user.Learner == null)
                        {
                            <td class="col col-auto">@Html.DisplayFor(u => user.Learner.Name)</td>
                        }
                        else
                        {
                            <td class="col col-auto">
                                <a class="btn btn-link" asp-controller="Learner" asp-action="Details" asp-route-id="@user.Learner.Id">@Html.DisplayFor(u => user.Learner.Name)</a>
                            </td>
                        }
                        <td class="col col-auto">
                            <a class="btn btn-outline-danger btn-sm" asp-action="Delete" asp-route-id="@user.User.Id" onclick="return confirm('Are you sure you want to delete this user?')">Delete</a>
                        </td>
                    </tr>
                    }

                </tbody>

            </table>

        </div>
    </div>

</div>