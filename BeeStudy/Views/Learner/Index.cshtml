@model IEnumerable<Learner>

@{
    ViewData["Title"] = "Learners";
}

<div class="container mx-auto">
    <h3 class="headline">Learner List</h3>
    <div class="row ">
        <div class="col ">
            <table class="table table-hover table-striped table-responsive mx-auto">
                <thead>
                    <tr class="text-center">
                        <th>@Html.DisplayNameFor(model => model.Id)</th>
                        <th>@Html.DisplayNameFor(model => model.Name)</th>
                        <th>@Html.DisplayNameFor(model => model.Email)</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Learner learner in Model)
                    {
                        <tr>
                            <td class="col col-auto px-5">@Html.DisplayFor(l => learner.Id)</td>
                            <td class="col col-auto px-5">@Html.DisplayFor(l => learner.Name)</td>
                            <td class="col col-auto px-5">@Html.DisplayFor(l => learner.Email)</td>
                            <td class="col col-auto px-5">
                                <a class="btn btn-outline-info mx-1" asp-action="Details" asp-route-id="@learner.Id">Details</a>
                                <a class="btn btn-outline-info mx-1" asp-action="Edit" asp-route-id="@learner.Id"> Edit</a>
                                <a class="btn btn-outline-danger mx-1" asp-action="Delete" asp-route-id="@learner.Id">Delete</a>
                            </td>
                        </tr>
                    }

                </tbody>

            </table>

        </div>
    </div>

</div>