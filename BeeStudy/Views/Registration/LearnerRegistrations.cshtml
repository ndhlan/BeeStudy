@model IEnumerable<Registration>

@{
    ViewData["Title"] = "Courses By Learner";
}

<div class="container">
    <div class="row text-center">
        <div class="col">


            @if (Model.Count() == 0)
            {
                <div>
                    <h4>You are not tracking any course. </h4>

                </div>

            }
            else
            {
                <div class="row">

                    <div class="row mx-auto">
                        <h3 class="headline ">Courses you are tracking</h3>
                    </div>
                    <div class="mx-auto">
                        <table class="table table-responsive table-striped ">
                            <thead>
                                <tr class="text-center">
                                    <th>Course Title</th>
                                    <th>List Price</th>
                                    <th>Current Price</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (Registration reg in Model)
                                {
                                    <tr class="align-baseline">
                                        <td class="text-justify">
                                            <a asp-controller="Course" asp-action="Details" asp-route-id="@reg.Course.Id">@Html.DisplayFor(model => reg.Course.Title)</a>
                                        </td>
                                        <td> $@Html.DisplayFor(model => reg.Course.ListPrice)</td>
                                        <td> $@Html.DisplayFor(model => reg.Course.CurrentPrice)</td>
                                        <td>
                                            <a class="btn btn-outline-danger btn-sm ml-5" asp-controller="Learner" asp-action="UserRemoveCourse" asp-route-learnerId="@reg.Learner.Id" asp-route-courseId="@reg.Course.Id" onclick="return confirm('Are you sure you want to stop tracking this course?')">Stop Tracking</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>

                    </div>
                </div>

            }

            <div class="clearfix">
                <div class="row float-right">
                    <a class="btn btn-outline-info" asp-action="Add">Track a new course</a>
                </div>
            </div>
            


            <div class="row">
                <img src="~/Assets/Img/course-app-amico.png" alt="course-app-amico.png" class="mx-auto" style="max-height:50vh" />

            </div>


        </div>

    </div>


</div>
